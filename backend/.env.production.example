# Database (Railway provides this as DATABASE_URL)
DATABASE_URL=postgresql+asyncpg://user:password@host:5432/tcg_prod

# Redis (Railway provides this as REDIS_URL)
REDIS_URL=redis://default:password@host:6379

# Supabase (from Supabase dashboard → Project Settings → API)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret

# Google OAuth (from Google Cloud Console → Credentials)
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# Security (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
FERNET_KEY=your-base64-fernet-key

# Apollo.io (optional — users can set per-account in Settings)
APOLLO_API_KEY=

# App
APP_ENV=production
ALLOWED_ORIGINS=https://your-app.vercel.app
